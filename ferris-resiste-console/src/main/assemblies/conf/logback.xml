<configuration scan="true" scanPeriod="5 minutes" packagingData="true" debug="false">
    
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    
    <shutdownHook />
    
<!--    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender> -->
    
    <appender name="FILE" class="org.ferris.resiste.console.logger.LoggerFileAppender">
        <encoder>
            <charset>UTF-8</charset>
            <!-- %date{yyyy-MM-dd HH:mm:ss}  %class{0}.M(): %msg%n -->
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%-5level] %class{0}.%M\(\): %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.jboss.weld" level="INFO"/>
    <logger name="org.ferris.resiste.console" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>